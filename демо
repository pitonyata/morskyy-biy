import random
import os
import time

class Colors:
    BLUE = '\033[94m'
    GREEN = '\033[92m'
    RED = '\033[91m'
    YELLOW = '\033[93m'
    CYAN = '\033[96m'
    MAGENTA = '\033[95m'
    WHITE = '\033[97m'
    RESET = '\033[0m'
    BOLD = '\033[1m'

class BattleshipGame:
    def __init__(self):
        self.size = 10
        self.ships = {
            'ÐÐ²Ñ–Ð°Ð½Ð¾ÑÐµÑ†ÑŒ': 5,
            'Ð›Ñ–Ð½ÐºÐ¾Ñ€': 4,
            'ÐšÑ€ÐµÐ¹ÑÐµÑ€': 3,
            'Ð•ÑÐ¼Ñ–Ð½ÐµÑ†ÑŒ': 3,
            'ÐŸÑ–Ð´Ð²Ð¾Ð´Ð½Ð¸Ð¹ Ñ‡Ð¾Ð²ÐµÐ½': 2
        }
        
        # ÐŸÐ¾Ð»Ñ Ð³Ñ€Ð°Ð²Ñ†Ñ
        self.player_board = [[' ' for _ in range(self.size)] for _ in range(self.size)]
        self.player_ships_board = [[' ' for _ in range(self.size)] for _ in range(self.size)]
        
        # ÐŸÐ¾Ð»Ñ ÐºÐ¾Ð¼Ð¿'ÑŽÑ‚ÐµÑ€Ð°
        self.computer_board = [[' ' for _ in range(self.size)] for _ in range(self.size)]
        self.computer_ships_board = [[' ' for _ in range(self.size)] for _ in range(self.size)]
        
        self.player_ships_remaining = []
        self.computer_ships_remaining = []
        
    def clear_screen(self):
        os.system('cls' if os.name == 'nt' else 'clear')
    
    def print_board(self, board, title, hide_ships=False, show_board=None):
        print(f"\n{Colors.BOLD}{Colors.CYAN}â•â•â• {title} â•â•â•{Colors.RESET}")
        print(f"    {Colors.YELLOW}" + " ".join([chr(65 + i) for i in range(self.size)]) + Colors.RESET)
        print(f"   {Colors.CYAN}{'â”€' * (self.size * 2 + 1)}{Colors.RESET}")
        
        for i in range(self.size):
            row_display = f"{Colors.YELLOW}{i+1:2}{Colors.RESET} {Colors.CYAN}â”‚{Colors.RESET}"
            for j in range(self.size):
                cell = board[i][j]
                
                if hide_ships and cell == 'â– ':
                    cell = ' '
                
                if cell == ' ':
                    row_display += f" {Colors.BLUE}~{Colors.RESET}"
                elif cell == 'â– ':
                    row_display += f" {Colors.WHITE}â– {Colors.RESET}"
                elif cell == 'X':
                    row_display += f" {Colors.RED}X{Colors.RESET}"
                elif cell == 'O':
                    row_display += f" {Colors.CYAN}â—‹{Colors.RESET}"
                else:
                    row_display += f" {cell}"
            
            row_display += f" {Colors.CYAN}â”‚{Colors.RESET}"
            print(row_display)
        
        print(f"   {Colors.CYAN}{'â”€' * (self.size * 2 + 1)}{Colors.RESET}")
    
    def print_double_board(self):
        print(f"\n{Colors.BOLD}{Colors.MAGENTA}{'â•' * 60}{Colors.RESET}")
        print(f"{Colors.BOLD}{Colors.GREEN}      Ð’ÐÐ¨Ð† ÐšÐžÐ ÐÐ‘Ð›Ð†{' ' * 15}ÐŸÐžÐ›Ð• Ð’ÐžÐ ÐžÐ“Ð{Colors.RESET}")
        print(f"{Colors.MAGENTA}{'â•' * 60}{Colors.RESET}\n")
        
        # Ð—Ð°Ð³Ð¾Ð»Ð¾Ð²ÐºÐ¸
        header = f"    {Colors.YELLOW}" + " ".join([chr(65 + i) for i in range(self.size)]) + Colors.RESET
        print(f"{header}      {header}")
        
        border = f"   {Colors.CYAN}{'â”€' * (self.size * 2 + 1)}{Colors.RESET}"
        print(f"{border}    {border}")
        
        for i in range(self.size):
            # Ð›Ñ–Ð²Ðµ Ð¿Ð¾Ð»Ðµ (ÐºÐ¾Ñ€Ð°Ð±Ð»Ñ– Ð³Ñ€Ð°Ð²Ñ†Ñ)
            left_row = f"{Colors.YELLOW}{i+1:2}{Colors.RESET} {Colors.CYAN}â”‚{Colors.RESET}"
            for j in range(self.size):
                cell = self.player_ships_board[i][j]
                if cell == ' ':
                    left_row += f" {Colors.BLUE}~{Colors.RESET}"
                elif cell == 'â– ':
                    left_row += f" {Colors.WHITE}â– {Colors.RESET}"
                elif cell == 'X':
                    left_row += f" {Colors.RED}X{Colors.RESET}"
                elif cell == 'O':
                    left_row += f" {Colors.CYAN}â—‹{Colors.RESET}"
            left_row += f" {Colors.CYAN}â”‚{Colors.RESET}"
            
            # ÐŸÑ€Ð°Ð²Ðµ Ð¿Ð¾Ð»Ðµ (Ð¿Ð¾ÑÑ‚Ñ€Ñ–Ð»Ð¸ Ð¿Ð¾ ÐºÐ¾Ð¼Ð¿'ÑŽÑ‚ÐµÑ€Ñƒ)
            right_row = f"{Colors.YELLOW}{i+1:2}{Colors.RESET} {Colors.CYAN}â”‚{Colors.RESET}"
            for j in range(self.size):
                cell = self.computer_board[i][j]
                if cell == ' ':
                    right_row += f" {Colors.BLUE}~{Colors.RESET}"
                elif cell == 'X':
                    right_row += f" {Colors.RED}X{Colors.RESET}"
                elif cell == 'O':
                    right_row += f" {Colors.CYAN}â—‹{Colors.RESET}"
                else:
                    right_row += f" {Colors.BLUE}~{Colors.RESET}"
            right_row += f" {Colors.CYAN}â”‚{Colors.RESET}"
            
            print(f"{left_row}    {right_row}")
        
        print(f"{border}    {border}\n")
    
    def is_valid_placement(self, board, row, col, size, horizontal):
        if horizontal:
            if col + size > self.size:
                return False
            for i in range(col, col + size):
                if board[row][i] != ' ':
                    return False
                # ÐŸÐµÑ€ÐµÐ²Ñ–Ñ€ÐºÐ° Ð½Ð°Ð²ÐºÐ¾Ð»Ð¾
                for dr in [-1, 0, 1]:
                    for dc in [-1, 0, 1]:
                        r, c = row + dr, i + dc
                        if 0 <= r < self.size and 0 <= c < self.size:
                            if board[r][c] == 'â– ':
                                return False
        else:
            if row + size > self.size:
                return False
            for i in range(row, row + size):
                if board[i][col] != ' ':
                    return False
                # ÐŸÐµÑ€ÐµÐ²Ñ–Ñ€ÐºÐ° Ð½Ð°Ð²ÐºÐ¾Ð»Ð¾
                for dr in [-1, 0, 1]:
                    for dc in [-1, 0, 1]:
                        r, c = i + dr, col + dc
                        if 0 <= r < self.size and 0 <= c < self.size:
                            if board[r][c] == 'â– ':
                                return False
        return True
    
    def place_ship(self, board, row, col, size, horizontal):
        positions = []
        if horizontal:
            for i in range(col, col + size):
                board[row][i] = 'â– '
                positions.append((row, i))
        else:
            for i in range(row, row + size):
                board[i][col] = 'â– '
                positions.append((i, col))
        return positions
    
    def place_ships_randomly(self, board):
        ships_positions = {}
        for ship_name, size in self.ships.items():
            placed = False
            while not placed:
                row = random.randint(0, self.size - 1)
                col = random.randint(0, self.size - 1)
                horizontal = random.choice([True, False])
                
                if self.is_valid_placement(board, row, col, size, horizontal):
                    positions = self.place_ship(board, row, col, size, horizontal)
                    ships_positions[ship_name] = positions
                    placed = True
        return ships_positions
    
    def place_ships_manually(self):
        self.clear_screen()
        print(f"{Colors.BOLD}{Colors.GREEN}â•”â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•—{Colors.RESET}")
        print(f"{Colors.BOLD}{Colors.GREEN}â•‘    Ð ÐžÐ—Ð¡Ð¢ÐÐ’Ð›Ð¯Ð„ÐœÐž Ð’ÐÐ¨Ð† ÐšÐžÐ ÐÐ‘Ð›Ð†! âš“    â•‘{Colors.RESET}")
        print(f"{Colors.BOLD}{Colors.GREEN}â•šâ•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•{Colors.RESET}\n")
        
        for ship_name, size in self.ships.items():
            placed = False
            while not placed:
                self.print_board(self.player_ships_board, "Ð’ÐÐ¨Ð• ÐŸÐžÐ›Ð•")
                print(f"\n{Colors.YELLOW}Ð Ð¾Ð·Ð¼Ñ–Ñ‰ÑƒÑ”Ð¼Ð¾: {Colors.BOLD}{ship_name}{Colors.RESET} {Colors.YELLOW}(Ñ€Ð¾Ð·Ð¼Ñ–Ñ€: {size}){Colors.RESET}")
                print(f"{Colors.CYAN}ÐŸÑ€Ð¸ÐºÐ»Ð°Ð´ Ð²Ð²Ð¾Ð´Ñƒ: A1 h (Ð³Ð¾Ñ€Ð¸Ð·Ð¾Ð½Ñ‚Ð°Ð»ÑŒÐ½Ð¾) Ð°Ð±Ð¾ A1 v (Ð²ÐµÑ€Ñ‚Ð¸ÐºÐ°Ð»ÑŒÐ½Ð¾){Colors.RESET}")
                
                try:
                    inp = input(f"\n{Colors.GREEN}Ð’Ð²ÐµÐ´Ñ–Ñ‚ÑŒ ÐºÐ¾Ð¾Ñ€Ð´Ð¸Ð½Ð°Ñ‚Ð¸: {Colors.RESET}").strip().upper()
                    parts = inp.split()
                    
                    if len(parts) != 2:
                        print(f"{Colors.RED}âŒ ÐÐµÐ²Ñ–Ñ€Ð½Ð¸Ð¹ Ñ„Ð¾Ñ€Ð¼Ð°Ñ‚! Ð¡Ð¿Ñ€Ð¾Ð±ÑƒÐ¹Ñ‚Ðµ Ñ‰Ðµ Ñ€Ð°Ð·.{Colors.RESET}")
                        time.sleep(1)
                        self.clear_screen()
                        continue
                    
                    coord, direction = parts
                    col = ord(coord[0]) - ord('A')
                    row = int(coord[1:]) - 1
                    horizontal = direction.upper() == 'H'
                    
                    if 0 <= row < self.size and 0 <= col < self.size:
                        if self.is_valid_placement(self.player_ships_board, row, col, size, horizontal):
                            positions = self.place_ship(self.player_ships_board, row, col, size, horizontal)
                            self.player_ships_remaining.append({
                                'name': ship_name,
                                'positions': positions,
                                'hits': []
                            })
                            placed = True
                            self.clear_screen()
                        else:
                            print(f"{Colors.RED}âŒ ÐÐµÐ¼Ð¾Ð¶Ð»Ð¸Ð²Ð¾ Ñ€Ð¾Ð·Ð¼Ñ–ÑÑ‚Ð¸Ñ‚Ð¸ ÐºÐ¾Ñ€Ð°Ð±ÐµÐ»ÑŒ Ñ‚ÑƒÑ‚!{Colors.RESET}")
                            time.sleep(1)
                            self.clear_screen()
                    else:
                        print(f"{Colors.RED}âŒ ÐšÐ¾Ð¾Ñ€Ð´Ð¸Ð½Ð°Ñ‚Ð¸ Ð¿Ð¾Ð·Ð° Ð¿Ð¾Ð»ÐµÐ¼!{Colors.RESET}")
                        time.sleep(1)
                        self.clear_screen()
                except (ValueError, IndexError):
                    print(f"{Colors.RED}âŒ ÐÐµÐ²Ñ–Ñ€Ð½Ð¸Ð¹ Ð²Ð²Ñ–Ð´! Ð¡Ð¿Ñ€Ð¾Ð±ÑƒÐ¹Ñ‚Ðµ Ñ‰Ðµ Ñ€Ð°Ð·.{Colors.RESET}")
                    time.sleep(1)
                    self.clear_screen()
    
    def make_shot(self, board, ships_board, row, col):
        if board[row][col] in ['X', 'O']:
            return 'already'
        
        if ships_board[row][col] == 'â– ':
            board[row][col] = 'X'
            ships_board[row][col] = 'X'
            return 'hit'
        else:
            board[row][col] = 'O'
            return 'miss'
    
    def check_ship_sunk(self, ships_list, row, col):
        for ship in ships_list:
            if (row, col) in ship['positions']:
                ship['hits'].append((row, col))
                if len(ship['hits']) == len(ship['positions']):
                    return ship['name']
        return None
    
    def computer_turn(self):
        # ÐŸÑ€Ð¾ÑÑ‚Ð° AI: Ð²Ð¸Ð¿Ð°Ð´ÐºÐ¾Ð²Ð¸Ð¹ Ð¿Ð¾ÑÑ‚Ñ€Ñ–Ð»
        while True:
            row = random.randint(0, self.size - 1)
            col = random.randint(0, self.size - 1)
            if self.player_ships_board[row][col] not in ['X', 'O']:
                return row, col
    
    def play(self):
        self.clear_screen()
        print(f"{Colors.BOLD}{Colors.CYAN}")
        print("â•”â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•—")
        print("â•‘                                           â•‘")
        print("â•‘          ðŸŒŠ ÐœÐžÐ Ð¡Ð¬ÐšÐ˜Ð™ Ð‘Ð†Ð™ ðŸŒŠ              â•‘")
        print("â•‘                                           â•‘")
        print("â•šâ•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•")
        print(f"{Colors.RESET}\n")
        
        print(f"{Colors.YELLOW}Ð’Ð¸Ð±ÐµÑ€Ñ–Ñ‚ÑŒ Ñ€ÐµÐ¶Ð¸Ð¼ Ñ€Ð¾Ð·Ñ‚Ð°ÑˆÑƒÐ²Ð°Ð½Ð½Ñ ÐºÐ¾Ñ€Ð°Ð±Ð»Ñ–Ð²:{Colors.RESET}")
        print(f"{Colors.GREEN}1{Colors.RESET} - Ð’Ñ€ÑƒÑ‡Ð½Ñƒ")
        print(f"{Colors.GREEN}2{Colors.RESET} - ÐÐ²Ñ‚Ð¾Ð¼Ð°Ñ‚Ð¸Ñ‡Ð½Ð¾ (Ð²Ð¸Ð¿Ð°Ð´ÐºÐ¾Ð²Ð¾)")
        
        choice = input(f"\n{Colors.CYAN}Ð’Ð°Ñˆ Ð²Ð¸Ð±Ñ–Ñ€ (1/2): {Colors.RESET}").strip()
        
        if choice == '1':
            self.place_ships_manually()
        else:
            print(f"\n{Colors.YELLOW}Ð Ð¾Ð·ÑÑ‚Ð°Ð²Ð»ÑÑ”Ð¼Ð¾ ÐºÐ¾Ñ€Ð°Ð±Ð»Ñ– Ð°Ð²Ñ‚Ð¾Ð¼Ð°Ñ‚Ð¸Ñ‡Ð½Ð¾...{Colors.RESET}")
            self.player_ships_remaining = []
            for ship_name, positions in self.place_ships_randomly(self.player_ships_board).items():
                self.player_ships_remaining.append({
                    'name': ship_name,
                    'positions': positions,
                    'hits': []
                })
            time.sleep(1)
        
        # Ð Ð¾Ð·ÑÑ‚Ð°Ð²Ð»ÑÑ”Ð¼Ð¾ ÐºÐ¾Ñ€Ð°Ð±Ð»Ñ– ÐºÐ¾Ð¼Ð¿'ÑŽÑ‚ÐµÑ€Ð°
        for ship_name, positions in self.place_ships_randomly(self.computer_ships_board).items():
            self.computer_ships_remaining.append({
                'name': ship_name,
                'positions': positions,
                'hits': []
            })
        
        self.clear_screen()
        print(f"{Colors.BOLD}{Colors.GREEN}âš“ Ð“Ñ€Ð° Ð¿Ð¾Ñ‡Ð°Ð»Ð°ÑÑ! Ð£Ð´Ð°Ñ‡Ñ–! âš“{Colors.RESET}\n")
        time.sleep(2)
        
        # Ð“Ð¾Ð»Ð¾Ð²Ð½Ð¸Ð¹ Ñ–Ð³Ñ€Ð¾Ð²Ð¸Ð¹ Ñ†Ð¸ÐºÐ»
        game_over = False
        while not game_over:
            self.clear_screen()
            self.print_double_board()
            
            # Ð¥Ñ–Ð´ Ð³Ñ€Ð°Ð²Ñ†Ñ
            print(f"\n{Colors.BOLD}{Colors.GREEN}â•â•â• Ð’ÐÐ¨ Ð¥Ð†Ð” â•â•â•{Colors.RESET}")
            try:
                coord = input(f"{Colors.CYAN}Ð’Ð²ÐµÐ´Ñ–Ñ‚ÑŒ ÐºÐ¾Ð¾Ñ€Ð´Ð¸Ð½Ð°Ñ‚Ð¸ Ð¿Ð¾ÑÑ‚Ñ€Ñ–Ð»Ñƒ (Ð½Ð°Ð¿Ñ€Ð¸ÐºÐ»Ð°Ð´, A1): {Colors.RESET}").strip().upper()
                
                col = ord(coord[0]) - ord('A')
                row = int(coord[1:]) - 1
                
                if 0 <= row < self.size and 0 <= col < self.size:
                    result = self.make_shot(self.computer_board, self.computer_ships_board, row, col)
                    
                    if result == 'already':
                        print(f"{Colors.YELLOW}âš ï¸  Ð’Ð¸ Ð²Ð¶Ðµ ÑÑ‚Ñ€Ñ–Ð»ÑÐ»Ð¸ ÑÑŽÐ´Ð¸!{Colors.RESET}")
                        time.sleep(1)
                        continue
                    elif result == 'hit':
                        sunk = self.check_ship_sunk(self.computer_ships_remaining, row, col)
                        if sunk:
                            print(f"{Colors.RED}ðŸ’¥ Ð’Ð›Ð£Ð§Ð˜Ð’! Ð’Ð¸ Ð¿Ð¾Ñ‚Ð¾Ð¿Ð¸Ð»Ð¸ {sunk}!{Colors.RESET}")
                            self.computer_ships_remaining = [s for s in self.computer_ships_remaining if s['name'] != sunk]
                        else:
                            print(f"{Colors.RED}ðŸ’¥ Ð’Ð›Ð£Ð§Ð˜Ð’!{Colors.RESET}")
                        time.sleep(2)
                    else:
                        print(f"{Colors.CYAN}ðŸ’§ ÐœÑ–Ñ†Ð¾!{Colors.RESET}")
                        time.sleep(1)
                    
                    # ÐŸÐµÑ€ÐµÐ²Ñ–Ñ€ÐºÐ° Ð¿ÐµÑ€ÐµÐ¼Ð¾Ð³Ð¸ Ð³Ñ€Ð°Ð²Ñ†Ñ
                    if not self.computer_ships_remaining:
                        self.clear_screen()
                        self.print_double_board()
                        print(f"\n{Colors.BOLD}{Colors.GREEN}")
                        print("â•”â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•—")
                        print("â•‘                                           â•‘")
                        print("â•‘         ðŸŽ‰ Ð’Ð˜ ÐŸÐ•Ð Ð•ÐœÐžÐ“Ð›Ð˜! ðŸŽ‰              â•‘")
                        print("â•‘                                           â•‘")
                        print("â•šâ•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•")
                        print(f"{Colors.RESET}")
                        game_over = True
                        break
                    
                    # Ð¥Ñ–Ð´ ÐºÐ¾Ð¼Ð¿'ÑŽÑ‚ÐµÑ€Ð°
                    print(f"\n{Colors.YELLOW}Ð¥Ñ–Ð´ ÐºÐ¾Ð¼Ð¿'ÑŽÑ‚ÐµÑ€Ð°...{Colors.RESET}")
                    time.sleep(1)
                    
                    comp_row, comp_col = self.computer_turn()
                    comp_result = self.make_shot(self.player_board, self.player_ships_board, comp_row, comp_col)
                    
                    coord_str = f"{chr(65 + comp_col)}{comp_row + 1}"
                    if comp_result == 'hit':
                        sunk = self.check_ship_sunk(self.player_ships_remaining, comp_row, comp_col)
                        if sunk:
                            print(f"{Colors.RED}ðŸ’¥ ÐšÐ¾Ð¼Ð¿'ÑŽÑ‚ÐµÑ€ Ð¿Ð¾Ñ‚Ð¾Ð¿Ð¸Ð² Ð²Ð°Ñˆ {sunk} Ð½Ð° {coord_str}!{Colors.RESET}")
                            self.player_ships_remaining = [s for s in self.player_ships_remaining if s['name'] != sunk]
                        else:
                            print(f"{Colors.RED}ðŸ’¥ ÐšÐ¾Ð¼Ð¿'ÑŽÑ‚ÐµÑ€ Ð²Ð»ÑƒÑ‡Ð¸Ð² Ñƒ {coord_str}!{Colors.RESET}")
                    else:
                        print(f"{Colors.CYAN}ÐšÐ¾Ð¼Ð¿'ÑŽÑ‚ÐµÑ€ Ð¿Ñ€Ð¾Ð¼Ð°Ñ…Ð½ÑƒÐ²ÑÑ Ð½Ð° {coord_str}!{Colors.RESET}")
                    
                    time.sleep(2)
                    
                    # ÐŸÐµÑ€ÐµÐ²Ñ–Ñ€ÐºÐ° Ð¿ÐµÑ€ÐµÐ¼Ð¾Ð³Ð¸ ÐºÐ¾Ð¼Ð¿'ÑŽÑ‚ÐµÑ€Ð°
                    if not self.player_ships_remaining:
                        self.clear_screen()
                        self.print_double_board()
                        print(f"\n{Colors.BOLD}{Colors.RED}")
                        print("â•”â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•—")
                        print("â•‘                                           â•‘")
                        print("â•‘          ðŸ˜¢ Ð’Ð˜ ÐŸÐ ÐžÐ“Ð ÐÐ›Ð˜! ðŸ˜¢              â•‘")
                        print("â•‘                                           â•‘")
                        print("â•šâ•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•")
                        print(f"{Colors.RESET}")
                        game_over = True
                else:
                    print(f"{Colors.RED}âŒ ÐšÐ¾Ð¾Ñ€Ð´Ð¸Ð½Ð°Ñ‚Ð¸ Ð¿Ð¾Ð·Ð° Ð¿Ð¾Ð»ÐµÐ¼!{Colors.RESET}")
                    time.sleep(1)
            except (ValueError, IndexError):
                print(f"{Colors.RED}âŒ ÐÐµÐ²Ñ–Ñ€Ð½Ð¸Ð¹ Ð²Ð²Ñ–Ð´!{Colors.RESET}")
                time.sleep(1)

